{
  "outDir": "/tmp/fortify-prod/x64",
  "clear": true,
  "include": [
    // node_modules
    "node_modules/pkcs11js/**/{*.js,*.json,*.node}",
    "node_modules/pcsclite/**/{*.js,*.json,*.node}",
    "node_modules/bindings/**/{*.js,*.json,*.node}",
    // "node_modules/bufferutil/**/{*.js,*.json,*.node}",
    "node_modules/file-uri-to-path/**/{*.js,*.json,*.node}",
    // "node_modules/utf-8-validate/**/{*.js,*.json,*.node}",
    "node_modules/lib-react-components/**/{*.css}",
    // Fortiy files
    "locale/**/*",
    "src/static/**/*",
    "src/resources/**/*",
    "out/**/*",
    "libpvpkcs11.dylib",
    "package.json"
  ],
  "exclude": [
    "node_modules/**/@types/**/*",
    // protobufjs
    "node_modules/**/protobufjs/bench/**/*",
    "node_modules/**/protobufjs/cli/**/*",
    "node_modules/**/protobufjs/dist/**/*",
    "node_modules/**/protobufjs/google/**/*",
    "node_modules/**/protobufjs/scripts/**/*",
    // config files
    "node_modules/**/tsconfig.json",
    "node_modules/**/tslint.json",
    "node_modules/**/eslint.json",
    "node_modules/**/istanbul.json",
    "node_modules/**/jsdoc.json",
    "node_modules/**/gulpfile.js",
    // Map files
    "**/*.js.map"
  ]
}
